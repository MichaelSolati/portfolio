{pkgs}: {
  channel = "stable-25.05";
  packages = [
    pkgs.nodejs_22
    pkgs.zulu
  ];
  idx = {
    workspace = {
      onCreate = {
        default.openFiles = [
          "src/app/page.tsx"
        ];
      };
    };
    previews = {
      enable = true;
      previews = {
        web = {
          command = ["npm" "run" "dev" "--" "--port" "$PORT" "--hostname" "0.0.0.0"];
          manager = "web";
        };
      };
    };
  };
}
